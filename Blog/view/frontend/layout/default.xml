<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
<body>
    <referenceBlock name="footer_links">
        <block class="Magento\Framework\View\Element\Html\Link\Current" name="movie-link">
            <arguments>
                <argument name="label" translate="true" xsi:type="string">Movie landing page</argument>
                <argument name="path" xsi:type="string">movie/index/index</argument>
            </arguments>
        </block>
    </referenceBlock>

    <referenceContainer name="header.panel">
            <block class="Magenest\Blog\Block\ColorSelect" name="header.color" template="Magenest_Blog::colorSelect.phtml" before="header.links" />
    </referenceContainer>  
</body>
</page>